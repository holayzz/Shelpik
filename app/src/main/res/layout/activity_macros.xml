<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_dark"
    android:padding="16dp">

    <com.holayzz.github.shelpik.SnowfallView
        android:id="@+id/snowfallView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <TextView
        android:id="@+id/titleText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Macros"
        android:textColor="@color/white"
        android:textSize="28sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/titleText"
        android:gravity="center"
        android:text="Automate your device"
        android:textColor="@color/text_secondary_dark"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnAddMacro"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_below="@id/textView3"
        android:backgroundTint="@color/surface_light_dark"
        android:text="Add Macro"
        android:textColor="@color/text_primary_dark"
        android:textSize="16dp" />

    <Button
        android:id="@+id/btnServiceControl"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/btnAddMacro"
        android:layout_marginTop="-5dp"
        android:backgroundTint="@color/surface_light_dark"
        android:text="Start Service"
        android:textColor="@color/text_primary_dark"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/yourMacrosText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnServiceControl"
        android:layout_marginBottom="8dp"
        android:text="Your Macros:"
        android:textColor="@color/text_secondary_dark"
        android:textSize="16sp"
        android:textStyle="bold" />

    <ListView
        android:id="@+id/macrosListView"
        android:layout_width="wrap_content"
        android:layout_height="443dp"
        android:layout_above="@id/bottomAnchor"
        android:layout_below="@id/yourMacrosText"
        android:background="@color/surface_light_dark"
        android:divider="@color/surface_dark"
        android:dividerHeight="1dp" />

    <View
        android:id="@+id/bottomAnchor"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_alignParentBottom="true" />

</RelativeLayout>
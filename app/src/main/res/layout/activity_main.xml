<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_dark"
    android:padding="16dp">

    <com.holayzz.github.shelpik.SnowfallView
        android:id="@+id/snowfallView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="❄ Shelpik ❄"
            android:textSize="32sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="48dp"
            android:textColor="@color/text_primary_dark" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/RoundedCard"
            android:layout_marginBottom="16dp">

            <Button
                android:id="@+id/btnMacros"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="| Macros |"
                android:textSize="16sp"
                android:backgroundTint="@color/surface_light_dark"
                android:textColor="@color/text_primary_dark"
                style="@style/RoundedButton" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/RoundedCard"
            android:layout_marginBottom="16dp">

            <Button
                android:id="@+id/btnTweaker"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="| Tweaker |"
                android:textSize="16sp"
                android:backgroundTint="@color/surface_light_dark"
                android:textColor="@color/text_primary_dark"
                style="@style/RoundedButton" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/RoundedCard"
            android:layout_marginBottom="16dp">

            <Button
                android:id="@+id/btnApkEditor"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="| APK Editor |"
                android:textSize="16sp"
                android:backgroundTint="@color/surface_light_dark"
                android:textColor="@color/text_primary_dark"
                style="@style/RoundedButton" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/RoundedCard">

            <Button
                android:id="@+id/btnInfo"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="| About |"
                android:textSize="16sp"
                android:backgroundTint="@color/surface_light_dark"
                android:textColor="@color/text_primary_dark"
                style="@style/RoundedButton" />

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</RelativeLayout>
